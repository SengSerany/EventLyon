<h1><%= @event.title %></h1>
Evenement de: <a href="<%= user_path(@event.admin.id) %>"> <%= @event.admin.username %></a>
</p>
<p><%= @event.description %><br/>

<% if Attendance.exists?(attendant: current_user, event: @event) %>
<br/><br/>
<%= link_to "Vous participez à cette évènement", event_attendance_path(event_id: @event), method: :delete, :class => "btn btn-danger disabled" %>
<% else %>
<%= form_tag event_attendances_path(event_id: @event) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Acheter votre billet pour participer à l'évènement! <br/> prix: <%= @event.price %>€</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Participe à la <%= @event.title %>"
          data-amount="<%= @event.price * 100 %>"
          data-currency="eur"
          data-locale="auto"></script>
<% end %>
<!-- <%= link_to "Participer", event_attendances_path(event_id: @event), method: :create, :class => "btn btn-primary" %> -->
<% end %>

<% if current_user.id == @event.admin.id %>
	<br/><br/>
	<%= link_to "Supprimer l'évènement", @event,  method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

