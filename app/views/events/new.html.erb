<h1>Event#new</h1>
<p>Créé votre évènement:</p>
<div class="container">
	<%= form_for @event do |f| %>

		<div class="form-group">
			<label>Titre de l'évènement</label>
			<%= f.text_field :title, class: 'form-control' %>
		</div>

		<div class="form-group">
			<label>Quand a lieu l'évènement ?</label>
			<%= f.datetime_select :start_date, :order => [:day, :month, :year], start_year: Date.today.year, use_month_numbers: true, minute_step: 5  %>
		</div>
		<div class="form-group">
			<label>Durée (en minutes) ?</label>
			<%= f.select :duration, [30, 45, 60, 90, 120, 150, 180], class: 'form-control' %>
		</div>
		<div class="form-group">
			<label>Où a lieu l'évènement?</label>
			<%= f.text_field :location, class: 'form-control' %>
		</div>
		<div class="form-group">
			<label>Prix ?</label>
			<%= f.number_field :location, class: 'form-control' %>
		</div>
		<div class="form-group">
			<label>Description :</label>
			<%= f.text_area :description, class: 'form-control' %>
		</div>
		<%end%>


</div>